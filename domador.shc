geffen,112,48,3	script	Mercador#gt0	4_M_MERCAT1,{
	.@npcname$ = "^FF8B00[= Mercador =]^000000";
	.@price = 500;
	if(Class != Job_Merchant && 
		Class != Job_Blacksmith && 
		Class != Job_Alchemist && 
		Class != Job_Merchant_High && 
		Class != Job_Whitesmith && 
		Class != Job_Creator && 
		Class != Job_Mechanic && 
		Class != Job_Mechanic_T && 
		Class != Job_Genetic && 
		Class != Job_Genetic_T){
		mes .@npcname$;
		mes "Está olhando o que?";
		close;
		}
	mes .@npcname$;
	mes "Olá ^FF0000" + strcharinfo(0) + "^000000!";
	mes "O que você procura?";
	next;
	switch(select("Nada:Quero comprar um carrinho") - 1){
		case 1:
			if(getskilllv(MC_PUSHCART) < 1){
				mes .@npcname$;
				mes "Você precisa aprender a Skill ^FF0000Pushcart^000000.";
				close;
			}
			if(checkcart()){
				mes .@npcname$;
				mes "Você já tem um Carrinho.";
				mes "O que pretende com mais um?";
				close;
			}
			mes .@npcname$;
			mes "Isso vai te custar uma grana.";
			mes "Mas posso fazer o preço camarada para você.";
			mes "Apenas " + .@price + "z, o que acha?";
			next;
			if(select("Está caro:Tudo bem") == 1){
				mes .@npcname$;
				mes "Não vai encontrar nada mais barato por aqui...";
				close;
			}
			if(Zeny < .@price){
				mes .@npcname$;
				mes "Hahaha";
				mes "Parece que não contou as moedas direito antes de vir aqui...";
				close;
			}
			mes .@npcname$;
			mes "Prontinho...";
			mes "Aqui está o seu carrinho!";
			close2;
			Zeny -= .@price;
			setcart(1);
			break;
		default:
			mes .@npcname$;
			mes "Ok! Mas não fique me encarando assim...";
			mes "É estranho.";
			close;
			break;
	}
	end;
}

malaya,304,359,4	duplicate(Mercador#gt0)	Mercador#gt31	4_M_MERCAT1

geffen,98,72,6	script	Adestradora#gt0	1_F_01,{
	.@npcname$ = "^FF8B00[= Adestradora =]^000000";
	mes .@npcname$;
	mes "Olá ^FF0000" + strcharinfo(0) + "^000000!";
	mes "Eu passei muito tempo estudando várias espécies.";
	mes "Vejamos se há alguma compatível com você...";
	next;
	switch(Class){
		case Job_Hunter:
		case Job_Sniper:
		case Job_Ranger:
		case Job_Ranger_T:
			callfunc("F_QDO_Adest_Falcon", .@npcname$);
			break;
		case Job_Knight:
		case Job_Crusader:
		case Job_Lord_Knight:
		case Job_Paladin:
		case Job_Royal_Guard:
		case Job_Royal_Guard_T:
			callfunc("F_QDO_Adest_Peco", .@npcname$);
			break;
		case Job_Rune_Knight:	
		case Job_Rune_Knight_T:	
			callfunc("F_QDO_Adest_Dragon", .@npcname$);
			break;
		default:
			mes .@npcname$;
			mes "Parece que não há nenhuma espécie compatível com sua profissão.";
			close;
			break;
	}
	end;
}

malaya,301,359,4	duplicate(Adestradora#gt0)	Adestradora#gt31	1_F_01

function	script	F_QDO_Adest_Falcon	{
	.@npcname$ = getarg(0);
	if(getskilllv(HT_FALCON) < 1){
		mes .@npcname$;
		mes "Você precisa aprender a Skill ^FF0000Falconry Mastery^000000.";
		close;
	}
	if(checkfalcon()){
		mes .@npcname$;
		mes "Você já tem um Falcão.";
		mes "O que pretende com mais um?";
		close;
	}
	mes .@npcname$;
	mes "Cuide bem do seu Falcão.";
	close2;
	setfalcon(1);
	return;
}

