function	script	F_QDO_Adest_Dragon	{
	.@npcname$ = getarg(0);
	if(getskilllv(RK_DRAGONTRAINING) < 1){
		mes .@npcname$;
		mes "Você precisa aprender a Skill ^FF0000Dragon Training^000000.";
		close;
	}
	if(checkmount()){
		mes .@npcname$;
		mes "Você já tem um Dragão.";
		mes "O que pretende com mais um?";
		close;
	}
	mes .@npcname$;
	mes "Cuide bem do seu Dragão.";
	close2;
	setarray(.@mount[0], MOUNT_DRAGON, MOUNT_DRAGON_GREEN, MOUNT_DRAGON_BROWN, MOUNT_DRAGON_GRAY, MOUNT_DRAGON_BLUE, MOUNT_DRAGON_RED);
	setmount(.@mount[rand(getarraysize(.@mount))]);
	return;
}

function	script	F_QDO_Mado_Gear	{
	.@npcname$ = getarg(0);
	.@price = getarg(1);
	if(getskilllv(NC_MADOLICENCE) < 1){
		mes .@npcname$;
		mes "Você precisa aprender a Skill ^FF0000Madogear License^000000.";
		close;
	}
	if(checkmount()){
		mes .@npcname$;
		mes "Você já tem um M.E.C.H.A..";
		mes "O que pretende com mais um?";
		close;
	}
	mes .@npcname$;
	mes "Para monstar um M.E.C.H.A. vou precisar de " + .@price + "z.";
	mes "Você tem essa quantia com você?";
	next;
	if(select("Ainda não:Com certeza") == 1){
		mes .@npcname$;
		mes "Tudo bem.";
		mes "Volte quando conseguir.";
		close;
	}
	if(Zeny < .@price){
		mes .@npcname$;
		mes "Você não tem dinheiro suficiente.";
		close;
	}
	mes .@npcname$;
	mes "Cuide bem do seu M.E.C.H.A..";
	mes "Não esqueça de fazer a manutenção dele direitinho.";
	mes "Hehe";
	close2;
	Zeny -= .@price;
	setmount(MOUNT_MADO);
	return;
}