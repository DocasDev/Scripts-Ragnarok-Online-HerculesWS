//<num><max>
function	script	F_QDO_Float_perc	{
	.@i = getarg(0);
	.@j = getarg(1);
	.@k = .@i * 100;
	.@x = .@k / .@j;
	.@y = ((.@k % .@j) * 100) / .@j;
	return .@x + "," + .@y + "%";
}

//<num><div>
function	script	F_QDO_Float_div	{
	.@i = getarg(0);
	.@j = getarg(1);
	.@x = .@i / .@j;
	.@y = ((.@i % .@j) * 100) / .@j;
	return .@x + "," + .@y;
}

