function	script	F_QDO_Anule_Mercant_Descount	{
	//(100 * 150) / (100 - 24)
	.@skill_value = getarg(1);
	.@taxa = 24;
	if(.@skill_value == 1){
		switch(getskilllv(MC_DISCOUNT)){
			case 1:
				.@taxa = 7;
				break;
			case 2:
				.@taxa = 9;
				break;
			case 3:
				.@taxa = 11;
				break;
			case 4:
				.@taxa = 13;
				break;
			case 5:
				.@taxa = 15;
				break;
			case 6:
				.@taxa = 17;
				break;
			case 7:
				.@taxa = 19;
				break;
			case 8:
				.@taxa = 21;
				break;
			case 9:
				.@taxa = 23;
				break;
			case 10:
				.@taxa = 24;
				break;
		}
	}
	return (100 * getarg(0)) / (100 - .@taxa) + 1;
}

