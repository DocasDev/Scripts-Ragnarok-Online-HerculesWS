gef_tower,60,103,4	script	Rachel#orc	4_M_CRU_HEAD,{
	.@npc_name$ = "^FF8B00[= Rachel =]^000000";
	if(countitem(Purified_Energy_Crystal) > 0){
		delitem(Purified_Energy_Crystal, countitem(Purified_Energy_Crystal));
	}
	if(BaseLevel < 90){
		mes .@npc_name$;
		mes "Desculpe, mas embora eu esteja procurando ajuda, você não é forte o suficiente para me ajudar.";
		close;
	}
	if (questprogress(61806)) {
		if(questprogress(61806, PLAYTIME) == 1){
			mes .@npc_name$;
			mes "Infelizmente a Fenda Dimensional está fechada, mas você poderá tentar novamente quando estiver aberta.";
			close;
		}
		erasequest(61806);
	}
	mes .@npc_name$;
	mes "Olá!";
	mes "Ainda bem que encontrei um Herói nessa Dimensão que pode me ajudar.";
	mes "Eu sou uma viajante Dimensional, meu nome é ^0075E9Rachel^000000";
	next;
	mes .@npc_name$;
	mes "Antes de mais nada, como é o seu nome?";
	next;
	select(strcharinfo(PC_NAME));
	mes .@npc_name$;
	mes "É um prazer te conhecer ^0075E9" + strcharinfo(PC_NAME) + "^000000!";
	mes "A Dimensão da qual eu venho está sendo invadida por Orcs enviados de outra Dimensão.";
	next;
	mes .@npc_name$;
	mes "Nós conseguimos repelir a invasão até um certo ponto e encontrar o covil dos Orcs.";
	next;
	mes .@npc_name$;
	mes "Mas eles são muitos e precisamos fechar a fenda que está trazendo eles para nossa Dimensão.";
	mes "Você gostaria de nos ajudar?";
	next;
	if(select("Estou ocupado.:Claro!") == 1){
		mes .@npc_name$;
		mes "Tudo bem!";
		mes "Quem sabe em outra hora, ou talvez eu possa encontrar outra pessoa.";
		close;
	}
	mes .@npc_name$;
	mes "Que bom!";
	mes "Eu posso lhe enviar pela Fenda Dimensional até a entrada do Covil.";
	next;
	mes .@npc_name$;
	mes "Mas cuidado, dentro do Covil há um monstro que está além da imaginação...";
	mes "Dizem que ele governa os Orcs.";
	next;
	mes .@npc_name$;
	mes "Você acha que dá conta?";
	mes "Está preparado para isso?";
	next;
	if(select("Quem sabe depois:Estou pronto") == 1){
		mes .@npc_name$;
		mes "Tudo bem, volte quando achar que está pronto!";
		close;
	}
	.@party_id = getcharid(CHAR_ID_PARTY);
	if (!.@party_id) {
		mes .@npc_name$;
		mes "Você não está em um Grupo. Dessa forma meu dispositivo não irá funcionar.";
		close;
	}
	if(has_instance("1@orcs") == ""){
		if (getcharid(CHAR_ID_CHAR) != getpartyleader(.@party_id, 2)) {
			mes .@npc_name$;
			mes "Eu agradeço muito a ajuda, mas terei que pedir para falar com o Líder do seu Grupo.";
			close;
		}
		getpartymember(.@party_id);
		if($@partymembercount > 3){
			mes .@npc_name$;
			mes "Eu agradeço muito a ajuda, mas tem gente demais no seu grupo.";
			mes "Meu dispositivo só conseguirá enviar até 3 pessoas por vez.";
			close;
		}
		.@instance = instance_create("Invasão dos Orcs", .@party_id);
		if (.@instance >= 0) {
			for (.@i = 1; .@i <= 2; ++.@i) {
				if (instance_attachmap(.@i + "@orcs", .@instance) == "") {
					mes .@npc_name$;
					mes "Meu dispositivo está com mau funcionamento...";
					mes "Talvez esteja sobrecarregado.";
					mes "Vamos tentar de novo em alguns minutos.";
					close2;
					instance_destroy(.@instance);
					end;
				}
			}
			instance_set_timeout(3600, 10, .@instance);
			instance_init(.@instance);
		}
		if(.@instance < 0 || has_instance("1@orcs") == ""){
			mes .@npc_name$;
			mes "Meu dispositivo está com mau funcionamento...";
			mes "Talvez esteja sobrecarregado.";
			mes "Vamos tentar de novo em alguns minutos.";
			close;
		}
	}
	mes .@npc_name$;
	mes "Muito bem, tudo está pronto.";
	mes "Boa sorte!";
	close2;
	setquest(61806);
	warp("1@orcs", 179, 19);
	end;
}

