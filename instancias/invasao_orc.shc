	end;

OnInstanceInit:
	'orc_mob_respawn = 0;
	'spa_torch_true = rand(1, 12);
	donpcevent(instance_npcname(strnpcinfo(NPC_NAME)) + "::OnRespawn");
OnDisable:
	disablenpc(instance_npcname(strnpcinfo(NPC_NAME)));
	end;
	
OnEnable:
	'orc_mob_respawn = 0;
	instance_announce(instance_id(), "[?????]: Não é possível! Como humanos insignificantes poderiam derrotar meus servos assim!?", bc_npc);
