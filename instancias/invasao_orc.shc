	}
	freeloop(0);
	'orc_mob_respawn++;
	end;
	
OnSummon:
	.@mobGID = areamonster(instance_mapname("1@orcs"), 134, 73, 146, 89, strmobinfo(2, ORK_WARRIOR), ORK_WARRIOR, 1, instance_npcname("B1 Area Mobs#orc")+"::OnMyMobDead1");
