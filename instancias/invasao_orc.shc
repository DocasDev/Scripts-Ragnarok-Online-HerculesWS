	setunitdata(.@mobGID, UDT_ATKMIN, .@atk_min + (50 * 'orc_mob_respawn));
	setunitdata(.@mobGID, UDT_ATKMAX, .@atk_max + (50 * 'orc_mob_respawn));
	setunitdata(.@mobGID, UDT_MAXHP, .@max_hp);
	setunitdata(.@mobGID, UDT_HP, .@max_hp);
	end;
}

