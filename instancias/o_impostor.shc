		next;
		mes .@npc_name$;
		mes "Agora que você tem a ^0075E9" + getitemname(Black_Gemstone) + "^000000 eu posso usar ela para conjurar um feitiço que irá enfraquecer o usurpador.";
		next;
		mes .@npc_name$;
		mes "Dessa forma você poderá enfrentá-lo com uma chance de vencer!";
		mes "Vejamos...";
		next;
		mes .@npc_name$;
		mes "Preciso que peque um livro de feitiços na biblioteca ao lado.";
		close2;
		delitem(Black_Gemstone, countitem(Black_Gemstone));
		donpcevent(instance_npcname("#spacontrol1") + "::OnStep09");
