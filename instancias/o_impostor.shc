		emotion(e_an);
		next;
		mes .@npc_name$;
		mes "Meus guardas irão dar um jeito em você.";
		next;
		select("Que guardas?");
		mes .@npc_name$;
		mes "Não é possível...";
		mes "Um ser insignificante como você não teria poder para derrotar todos os guardas do castelo.";
		emotion(e_what);
		next;
		mes .@npc_name$;
		mes "^CCCCCC**sussurra**^000000";
		mes "Aquele impertinente do ^0075E9Rubert^000000.";
		mes "Pensei que meus guardas tinham dado conta dele...";
		next;
		select("Mas você não é o Rubert?");
		mes .@npc_name$;
		mes "..";
		mes "...";
		mes "....";
		emotion(e_omg);
		next;
		mes .@npc_name$;
		mes "Você gosta de bancar " + (Sex == 1 ? "o" : "a") + " espert" + (Sex == 1 ? "o" : "a") + ", não é!?";
