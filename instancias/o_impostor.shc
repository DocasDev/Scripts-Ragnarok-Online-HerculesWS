			mes "De qualquer forma, é melhor você voltar para sua dimensão.";
			mes "Irei pedir, agora mesmo, que meus cientistas preparem a sua volta para casa.";
			emotion(e_heh);
			close2;
		}
		donpcevent(instance_npcname("#spacontrol1") + "::OnStep01");
