		mes "Pronto!";
		mes "Consegui neutralizar a magia de imortalidade do usurpador, mas isso não irá durar para sempre.";
		next;
		mes .@npc_name$;
		mes "Você deve enfrentá-lo o mais rápido possível.";
		mes "E lembre-se, quanto mais tempo levar para derrotá-lo, mais fraca a magia que usei ficará.";
		next;
		mes .@npc_name$;
		mes "Se não conseguir derrotá-lo rápido, a imortalidade dele será restaurada.";
		next;
		mes .@npc_name$;
		mes "Volte ao salão principal e enfrente o usurpador.";
		mes "Você é nossa última esperança de liberdade!";
		close2;
		delitem(Book_Of_Magic, countitem(Book_Of_Magic));
		donpcevent(instance_npcname("#spacontrol1") + "::OnStep10");
		end;
	}
	else if('spa_step == 10){
		mes .@npc_name$;
		mes "Não perca tempo!";
		mes "Volte ao salão principal e enfrente o usurpador.";
		mes "Você é nossa última esperança de liberdade!";
		close;
	}
	else if('spa_step == 11){
		mes .@npc_name$;
		mes "Seja corajoso, destemido e principalmente determinado. Dessa forma nada poderá lhe deter!";
		close;
	}
	else if('spa_step == 12){
		mes .@npc_name$;
		mes "Obrigada por nos salvar.";
		mes "Você é " + (Sex == 1 ? "meu" : "minha") + " " + (Sex == 1 ? "Herói" : "Heroína") + "!";
		emotion(e_ok);
		close;
	}
}

