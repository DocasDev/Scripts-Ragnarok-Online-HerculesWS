gef_tower,52,104,4	script	Rubert#spai	4_M_RUSKING,{
	.@npc_name$ = "^FF8B00[= Rubert =]^000000";
	if(BaseLevel < 90){
		mes .@npc_name$;
		mes "Desculpe, mas embora eu precise muito de ajuda, você não é forte o suficiente para me ajudar.";
		close;
	}
	if (questprogress(61805)) {
		if(questprogress(61805, PLAYTIME) == 1){
			mes .@npc_name$;
			mes "Infelizmente a Fenda Dimensional se fechou, mas você poderá tentar novamente quando estiver aberta.";
			close;
		}
		erasequest(61805);
	}
	mes .@npc_name$;
	mes "Olá!";
	mes "Ainda bem que encontrei um Herói nessa Dimensão.";
	mes "Eu sou um viajante Dimensional, meu nome é ^0075E9Rubert^000000";
	next;
	mes .@npc_name$;
	mes "Você parece ser forte!";
	mes "Poderia me ajudar?";
	next;
	if(select("Estou ocupado.:Claro!") == 1){
		mes .@npc_name$;
		mes "Tudo bem!";
		mes "Quem sabe em outra hora, ou talvez eu possa encontrar outra pessoa.";
		close;
	}
	mes .@npc_name$;
	mes "Em primieiro lugar...";
	mes "Qual o seu nome?";
	next;
	select(strcharinfo(PC_NAME));
	mes .@npc_name$;
	mes "É um prazer te conhecer ^0075E9" + strcharinfo(PC_NAME) + "^000000!";
	mes "Eu venho de outra dimensão e estou procurando ajuda para livrar meu castelo de um impostor que usurpou o meu trono.";
	next;
	mes .@npc_name$;
	mes "Mas para isso será necessário derrotar todo o seu exército e eu não consigo fazer isso sozinho.";
	next;
	mes .@npc_name$;
	mes "Eu posso lhe enviar para lá, mas meu dispositivo dimensional só pode transportar uma pessoa por vez, então você terá que ir sozinho.";
	next;
	if(select("Preciso me preparar:Estou pronto") == 1){
		mes .@npc_name$;
		mes "Tudo bem, posso esperar!";
		close;
	}
	.@party_id = getcharid(CHAR_ID_PARTY);
	if (!.@party_id) {
		mes .@npc_name$;
		mes "Você não está em um Grupo. Dessa forma meu dispositivo não irá funcionar.";
		close;
	}
	if (getcharid(CHAR_ID_CHAR) != getpartyleader(.@party_id, 2)) {
		mes .@npc_name$;
		mes "Eu agradeço muito a ajuda, mas terei que pedir para falar com o Líder do seu Grupo.";
		close;
	}
	.@instance = instance_create("O Impostor", .@party_id);
	if (.@instance >= 0) {
		if (instance_attachmap("1@spa", .@instance) == "") {
			mes .@npc_name$;
			mes "Meu dispositivo está com mau funcionamento...";
			mes "Talvez esteja sobrecarregado.";
			mes "Vamos tentar de novo em alguns minutos.";
			close2;
			instance_destroy(.@instance);
			end;
		}
		instance_set_timeout(3600, 10, .@instance);
		instance_init(.@instance);
	}
	if(.@instance < 0 || has_instance("1@spa") == ""){
		mes .@npc_name$;
		mes "Meu dispositivo está com mau funcionamento...";
		mes "Talvez esteja sobrecarregado.";
		mes "Vamos tentar de novo em alguns minutos.";
		close;
	}
	mes .@npc_name$;
	mes "Muito bem, tudo está pronto.";
	mes "Boa sorte ^0075E9" + strcharinfo(PC_NAME) + "^000000!";
	close2;
	setquest(61805);
	warp("1@spa", 42, 206);
	end;
}

